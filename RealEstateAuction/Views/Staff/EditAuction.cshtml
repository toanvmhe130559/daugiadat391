@model RealEstateAuction.DataModel.AuctionEditDataModel
@{
    Layout = "~/Views/Shared/UserLayout.cshtml";
    ViewData["Title"] = "Cập nhật phiên đấu giá";
}
<h2>Cập nhật phiên đấu giá</h2>
<hr>
@using (Html.BeginForm("EditAuction", "Staff", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    <div class="row">
        <div class="col-6">
            <input asp-for=Id type="hidden">
            <div class="input-group mt-3">
                <span class="input-group-text">Tiêu đề</span>
                <input asp-for=Title type="text" class="form-control">
            </div>
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })

            <div class="input-group mt-3">
                <span class="input-group-text">Giá khời điểm (VNĐ)</span>
                <input asp-for=StartPrice type="text" class="form-control" value="@Model.StartPrice.ToString().TrimEnd('0').TrimEnd(',')" />
            </div>
            @Html.ValidationMessageFor(model => model.StartPrice, "", new { @class = "text-danger" })

            <div class="input-group mt-3">
                <span class="input-group-text">Giá kết thúc (VNĐ)</span>
                <input asp-for=EndPrice type="text" class="form-control" value="@Model.EndPrice.ToString().TrimEnd('0').TrimEnd(',')">
            </div>
            @Html.ValidationMessageFor(model => model.EndPrice, "", new { @class = "text-danger" })

            <div class="input-group mt-3">
                <span class="input-group-text">Diện tích (m2)</span>
                <input asp-for=Area type="text" class="form-control">
            </div>
            @Html.ValidationMessageFor(model => model.Area, "", new { @class = "text-danger" })

            <div class="input-group mt-3">
                <span class="input-group-text">Địa chỉ</span>
                <input asp-for=Address type="text" class="form-control">
            </div>
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })

            <div class="input-group mt-3">
                <span class="input-group-text">
                    Mặt tiền (m)
                </span>
                <input asp-for=Facade type="text" class="form-control">
            </div>
            @Html.ValidationMessageFor(model => model.Facade, "", new { @class = "text-danger" })

            <div class="input-group mt-3">
                <span class="input-group-text">
                    Hướng bất động sản
                </span>
                <input asp-for=Direction type="text" class="form-control">
            </div>
            @Html.ValidationMessageFor(model => model.Direction, "", new { @class = "text-danger" })

            <div class="input-group mt-3">
                <span class="input-group-text">
                    Mô tả
                </span>
                <textarea asp-for=Description rows="10" class="form-control"></textarea>
            </div>
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

            <div class="input-group mt-3">
                <span class="input-group-text">
                    Ảnh
                </span>
                <input asp-for=ImageFiles type="file" multiple class="form-control" accept="image/*">
            </div>
            @Html.ValidationMessageFor(model => model.ImageFiles, "", new { @class = "text-danger" })

            <!--Display image of auction-->
            <div class="mt-3 d-flex gap-3">
                @foreach (var image in Model.Images)
                {
                    <img src="@Url.Content(image.Url)" height="150" width="150">
                }
            </div>

            <div class="input-group mt-3">
                <span class="input-group-text">
                    Thời gian bắt đầu
                </span>
                <input asp-for=StartTime type="datetime-local" class="form-control">
            </div>
            @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })

            <div class="input-group mt-3">
                <span class="input-group-text">
                    Thời gian kết thúc
                </span>
                <input asp-for=EndTime type="datetime-local" class="form-control">
            </div>
            @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })

            <div class="w-100 d-flex justify-content-center">
                <button class="btn btn-primary mt-3">Cập nhật</button>
            </div>

        </div>

    </div>
}
